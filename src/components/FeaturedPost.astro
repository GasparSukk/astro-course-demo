---
import type {CollectionEntry} from "astro:content"
import {Image} from "@astrojs/image/components"

import CategoryList from "./CategoryList.astro"

type Props = {
    author: CollectionEntry<"authors">
    post: CollectionEntry<"posts">
}

const {author, post} = Astro.props
---

<article
    class="grid grid-cols-2 gap-x-12 gap-y-5 mb-28 max-lg:grid-cols-1 max-sm:mb-12"
>
    <a href={`/blog/${post.slug}`}>
        <Image
            src={post.data.image}
            alt={post.data.title}
            width={1024}
            height={1024 / 1.5}
            format="webp"
            class="rounded-2xl aspect-thumbnail object-cover"
        />
    </a>

    <div>
        <div class="mb-4">
            <CategoryList categories={post.data.categories} />
        </div>

        <a
            href={`/blog/${post.slug}`}
            class="text-5xl text-zinc-900 mb-4 font-bold inline-block"
        >
            {post.data.title}
        </a>

        <p class="text-zinc-500 text-2xl mb-9 line-clamp-3">
            {post.body}
        </p>

        <div class="flex justify-between items-center">
            <div class="flex items-center gap-x-2">
                <a href={`/author/${author?.slug}`}>
                    <Image
                        src={author?.data.image}
                        alt={author?.data.name}
                        width={48}
                        height={48}
                        format="webp"
                        class="rounded-full border-2 border-teal-500 aspect-square w-12 object-cover"
                    />
                </a>

                <a
                    href={`/author/${author?.slug}`}
                    class="text-zinc-900 text-2xl font-bold"
                >
                    {author?.data.name}
                </a>
            </div>

            <span class="text-zinc-700 text-xl">
                {post.data.date}
            </span>
        </div>
    </div>
</article>
