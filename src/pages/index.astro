---
import {getCollection} from "astro:content"

import Layout from "../layouts/Layout.astro"

const authors = await getCollection("authors")
const posts = await getCollection("posts", post => !post.data.featured)
const featuredPosts = await getCollection("posts", post => post.data.featured)
---

<Layout title="Rhythm Nation">
    <main class="px-24 max-sm:px-5">
        <h1 class="text-6xl text-teal-900 font-bold mb-5">
            Rhythm Nation Blog
        </h1>

        <p class="text-zinc-900 text-2xl mb-24">
            Join the Community and learn from Music Producers and Enthusiasts
        </p>

        {
            featuredPosts.map(post => {
                const author = authors.find(
                    author => author.slug === post.data.author,
                )

                return (
                    <div class="grid grid-cols-2 gap-x-12 mb-28">
                        <img
                            src={post.data.image}
                            alt={post.data.title}
                            class="rounded-2xl"
                        />

                        <div class="">
                            <div class="flex gap-x-4 mb-4">
                                {post.data.categories.map(category => {
                                    return (
                                        <span class="text-teal-900 rounded-3xl uppercase text-xl p-2 border-2 border-teal-900">
                                            {category}
                                        </span>
                                    )
                                })}
                            </div>

                            <p class="text-5xl text-zinc-900 mb-4 font-bold">
                                {post.data.title}
                            </p>

                            <p class="text-zinc-500 text-2xl mb-9 line-clamp-5">
                                {post.body}
                            </p>

                            <div class="flex justify-between items-center">
                                <div class="flex items-center gap-x-2">
                                    <img
                                        src={author?.data.image}
                                        alt={author?.data.name}
                                        class="rounded-full border-2 border-teal-500 aspect-square w-12 object-cover"
                                    />

                                    <span class="text-zinc-900 text-2xl font-bold">
                                        {author?.data.name}
                                    </span>
                                </div>

                                <span class="text-zinc-700 text-xl">
                                    {post.data.date}
                                </span>
                            </div>
                        </div>
                    </div>
                )
            })
        }

        <hr class="w-full border border-teal-900" />

        {
            posts.map(post => {
                return <p>{post.data.title}</p>
            })
        }
    </main>
</Layout>
